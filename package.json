{
  "name": "mora-vscode",
  "displayName": "mora-vscode",
  "description": "vscode extension for myself use only",
  "version": "0.0.1",
  "publisher": "mora-vscode",
  "engines": {
    "vscode": "^1.9.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onCommand:extension.createScriptFile",
    "onCommand:extension.createStyleFile"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "mora-vscode",
      "properties": {
        "mora-vscode.templatePathSeparator": {
          "type": "string",
          "default": ":",
          "description": "path separator in template file name"
        },
        "mora-vscode.templateExtension": {
          "type": "string",
          "default": ".tpl",
          "description": "template file's extension"
        },
        "mora-vscode.templateDirectory": {
          "type": "string",
          "default": ".tpl",
          "description": "template directory which contains template files"
        },
        "mora-vscode.templateMinimatchOptions": {
          "type": "object",
          "default": {
            "matchBase": true,
            "nocomment": true,
            "dot": true
          },
          "description": "minimatch options used in template name match, ref: https://github.com/isaacs/minimatch#options"
        },
        "mora-vscode.generateTemplateVariableFiles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "js files or ts(install `ts-node` first) files that generate custom template variables"
        },
        "mora-vscode.importStyleTemplate": {
          "type": "string",
          "default": "import './style/$rawModuleName.scss'",
          "description": "style file import format, used for create local style file and add reference to current file"
        },
        "mora-vscode.globalStyleFiles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "global style files, used for className auto completion in react file"
        }
      }
    },
    "commands": [
      {
        "command": "extension.createScriptFile",
        "title": "Create Script File"
      },
      {
        "command": "extension.createStyleFile",
        "title": "Create Style File"
      }
    ],
    "keybindings": [
      {
        "command": "extension.createScriptFile",
        "key": "cmd+k cmd+p"
      },
      {
        "command": "extension.createStyleFile",
        "key": "cmd+k cmd+s"
      }
    ],
    "snippets": [
      {
        "path": "./snippets/MyJavascript.json",
        "language": "javascript"
      },
      {
        "path": "./snippets/MyJavascript.json",
        "language": "typescript"
      },
      {
        "path": "./snippets/MyJavascript.json",
        "language": "javascriptreact"
      },
      {
        "path": "./snippets/MyJavascript.json",
        "language": "typescriptreact"
      },
      {
        "path": "./snippets/ReactSnippets.json",
        "language": "javascriptreact"
      },
      {
        "path": "./snippets/ReactSnippets.json",
        "language": "typescriptreact"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "javascript"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "typescript"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "javascriptreact"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "typescriptreact"
      }
    ]
  },
  "scripts": {
    "link": "ln -sf ~/Workspace/mora-vscode/ ~/.vscode/extensions/mora-vscode",
    "build": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "2.0.0",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "fs-extra": "^4.0.0",
    "minimatch": "^3.0.4",
    "mora-scripts": "~1.6.8",
    "naming-transform": "~0.1.0"
  }
}
