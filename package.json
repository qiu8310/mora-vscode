{
  "name": "mora-vscode",
  "displayName": "mora-vscode",
  "description": "vscode extension for myself use only",
  "version": "0.0.1",
  "publisher": "mora-vscode",
  "engines": {
    "vscode": "^1.9.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onCommand:extension.createReactPureComponent",
    "onCommand:extension.createReactListComponent",
    "onCommand:extension.createReactComponentStyle"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "mora-vscode",
      "properties": {
        "mora-vscode.globalStyleFiles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "global style files, used for auto completion in react file"
        },
        "mora-vscode.styleFileFolder": {
          "type": "string",
          "default": "style",
          "description": "style file folder, used for create local style file"
        },
        "mora-vscode.styleFileExtension": {
          "type": "string",
          "default": ".scss",
          "description": "style file extension"
        }
      }
    },
    "commands": [
      {
        "command": "extension.createScriptFile",
        "title": "Create Script File"
      },
      {
        "command": "extension.createStyleFile",
        "title": "Create Style File"
      }
    ],
    "keybindings": [
      {
        "command": "extension.createScriptFile",
        "key": "cmd+k cmd+p"
      },
      {
        "command": "extension.createStyleFile",
        "key": "cmd+k cmd+s"
      }
    ],
    "snippets": [
      {
        "path": "./snippets/MyJavascript.json",
        "language": "javascript"
      },
      {
        "path": "./snippets/MyJavascript.json",
        "language": "typescript"
      },
      {
        "path": "./snippets/MyJavascript.json",
        "language": "javascriptreact"
      },
      {
        "path": "./snippets/MyJavascript.json",
        "language": "typescriptreact"
      },
      {
        "path": "./snippets/ReactSnippets.json",
        "language": "javascriptreact"
      },
      {
        "path": "./snippets/ReactSnippets.json",
        "language": "typescriptreact"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "javascript"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "typescript"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "javascriptreact"
      },
      {
        "path": "./snippets/JavaScriptSnippets.json",
        "language": "typescriptreact"
      }
    ]
  },
  "scripts": {
    "link": "ln -sf ~/Workspace/mora-vscode/ ~/.vscode/extensions/mora-vscode",
    "build": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "__postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "2.0.0",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "fs-extra": "2.1.2",
    "mora-scripts": "1.6.8",
    "naming-transform": "0.1.0"
  }
}
